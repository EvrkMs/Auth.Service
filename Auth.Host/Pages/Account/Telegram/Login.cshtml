@page
@model Auth.Host.Pages.Account.Telegram.LoginModel
@{
    ViewData["Title"] = "Вход через Telegram";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru" class="h-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ava Auth</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-slate-950 text-slate-100">
    <div class="min-h-screen flex items-center justify-center py-10 px-6">
        <div class="w-full max-w-xl bg-slate-900/80 border border-slate-800 rounded-2xl p-8 shadow-2xl">
            <div class="mb-6 text-center">
                <h1 class="text-3xl font-semibold">Вход через Telegram</h1>
                <p class="text-sm text-slate-400 mt-2">Подтвердите аккаунт Telegram, чтобы продолжить авторизацию</p>
            </div>
            @if (string.IsNullOrWhiteSpace(Model.BotUsername))
            {
                <div class="bg-red-500/10 border border-red-500/40 text-red-200 text-sm rounded-xl px-4 py-3">
                    Авторизация через Telegram недоступна. Обратитесь к администратору.
                </div>
            }
            else
            {
                <form id="telegram-form" method="post" class="space-y-4">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="ClientId" />
                    <input type="hidden" id="tg-id" name="id" />
                    <input type="hidden" id="tg-first-name" name="first_name" />
                    <input type="hidden" id="tg-last-name" name="last_name" />
                    <input type="hidden" id="tg-username" name="username" />
                    <input type="hidden" id="tg-photo" name="photo_url" />
                    <input type="hidden" id="tg-auth-date" name="auth_date" />
                    <input type="hidden" id="tg-hash" name="hash" />

                    <div id="error-box" class="hidden bg-red-500/10 border border-red-500/40 text-red-200 text-sm rounded-xl px-4 py-3"></div>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="bg-red-500/10 border border-red-500/40 text-red-200 text-sm rounded-xl px-4 py-3">
                            @Model.ErrorMessage
                        </div>
                    }

                    <div class="flex justify-center">
                        <script data-cfasync="false">
                            window.__telegramLoginQueue = window.__telegramLoginQueue || [];
                            window.handleTelegramLogin = function (user) {
                                window.__telegramLoginQueue.push(user);
                            };
                        </script>
                        <script async src="https://telegram.org/js/telegram-widget.js?22"
                                data-telegram-login="@Model.BotUsername"
                                data-size="large"
                                data-request-access="write"
                                data-onauth="handleTelegramLogin(user)"></script>
                    </div>

                    <p class="text-sm text-slate-400 text-center">После подтверждения Telegram вход будет выполнен автоматически.</p>
                    <a class="block text-center text-sm text-slate-400 hover:text-white" href="@Model.SafeReturnUrl">Вернуться назад</a>
                </form>
            }
        </div>
    </div>

    <script>
        const errorBox = document.getElementById('error-box');
        function showInlineError(message) {
            if (!errorBox) return;
            errorBox.textContent = message;
            errorBox.classList.remove('hidden');
        }

        window.handleTelegramLogin = function (user) {
            if (!user) {
                showInlineError('Не удалось получить данные Telegram.');
                return;
            }

            document.getElementById('tg-id').value = user.id;
            document.getElementById('tg-first-name').value = user.first_name || '';
            document.getElementById('tg-last-name').value = user.last_name || '';
            document.getElementById('tg-username').value = user.username || '';
            document.getElementById('tg-photo').value = user.photo_url || '';
            document.getElementById('tg-auth-date').value = user.auth_date;
            document.getElementById('tg-hash').value = user.hash || '';

            document.getElementById('telegram-form').submit();
        }

        if (Array.isArray(window.__telegramLoginQueue) && window.__telegramLoginQueue.length > 0) {
            window.__telegramLoginQueue.forEach((user) => window.handleTelegramLogin(user));
            window.__telegramLoginQueue = [];
        }
    </script>
</body>
</html>
