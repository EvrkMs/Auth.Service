@page
@model Auth.Host.Pages.Account.Telegram.UnbindModel
@{
    ViewData["Title"] = "Отвязка Telegram";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru" class="h-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ava Auth</title>
    <style>
        :root {
            --bg: #0f172a;
            --panel: rgba(15, 23, 42, 0.85);
            --panel-border: #1f2937;
            --text: #e2e8f0;
            --muted: #94a3b8;
            --accent: #a855f7;
            --accent-2: #ec4899;
            --error-bg: rgba(239, 68, 68, 0.1);
            --error-border: rgba(239, 68, 68, 0.4);
            --error-text: #fca5a5;
        }

        * { box-sizing: border-box; }

        body {
            margin: 0;
            min-height: 100vh;
            background: var(--bg);
            color: var(--text);
            font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        }

        .layout {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px 24px;
        }

        .panel {
            width: 100%;
            max-width: 640px;
            background: var(--panel);
            border: 1px solid var(--panel-border);
            border-radius: 16px;
            padding: 32px;
            box-shadow: 0 30px 80px rgba(0, 0, 0, 0.4);
        }

        .heading {
            text-align: center;
            margin-bottom: 24px;
        }

        .title {
            margin: 0;
            font-size: 28px;
            font-weight: 600;
        }

        .subtitle {
            margin: 8px 0 0;
            color: var(--muted);
            font-size: 14px;
        }

        .form {
            display: flex;
            flex-direction: column;
            gap: 16px;
        }

        label {
            display: block;
            font-size: 14px;
            color: #cbd5e1;
            margin-bottom: 6px;
        }

        .input {
            width: 100%;
            padding: 12px 14px;
            border-radius: 12px;
            border: 1px solid #1f2937;
            background: rgba(30, 41, 59, 0.7);
            color: var(--text);
        }

        .hint {
            margin-top: 6px;
            font-size: 12px;
            color: var(--muted);
        }

        .btn-primary {
            width: 100%;
            padding: 12px 14px;
            border: none;
            border-radius: 12px;
            background: linear-gradient(90deg, var(--accent), var(--accent-2));
            color: #fff;
            font-weight: 600;
            cursor: pointer;
            box-shadow: 0 12px 40px rgba(168, 85, 247, 0.35);
            transition: transform 0.08s ease, opacity 0.08s ease;
        }

        .btn-primary:active {
            transform: translateY(1px);
        }

        .alert-error {
            background: var(--error-bg);
            border: 1px solid var(--error-border);
            color: var(--error-text);
            font-size: 14px;
            border-radius: 12px;
            padding: 12px 16px;
        }

        .back-link {
            display: block;
            text-align: center;
            font-size: 14px;
            color: var(--muted);
            text-decoration: none;
        }

        .back-link:hover {
            color: var(--text);
        }

        .note {
            text-align: center;
            font-size: 12px;
            color: var(--muted);
        }
    </style>
</head>
<body>
    <div class="layout">
        <div class="panel">
            <div class="heading">
                <h1 class="title">Отвязка Telegram</h1>
                <p class="subtitle">Введите пароль, чтобы подтвердить отключение Telegram.</p>
            </div>
            <form method="post" class="form" id="unbind-form">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ReturnUrl)
                @Html.HiddenFor(m => m.ClientId)
                <div>
                    <label>Пароль</label>
                    <input
                        asp-for="Password"
                        name="Password"
                        id="Password"
                        type="password"
                        class="input"
                        placeholder="Введите пароль"
                    />
                    <span class="hint">Пароль нужен для подтверждения прав.</span>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-sm", style = "color:#fca5a5;" })
                </div>
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert-error">
                        @Model.ErrorMessage
                    </div>
                }
                <div class="flex flex-col gap-2">
                    <button type="submit" class="btn-primary">
                        Отвязать Telegram
                    </button>
                    <a class="back-link" href="@Model.SafeReturnUrl">
                        Назад
                    </a>
                </div>
                <p class="note">
                    После успешной отвязки вы вернётесь на страницу входа.
                </p>
            </form>
        </div>
    </div>
    <script>
        const passwordInput = document.querySelector('#unbind-form input[name="Password"]');
        const validationSpan = document.querySelector('#unbind-form [data-valmsg-for="Password"]');

        document.getElementById('unbind-form')?.addEventListener('submit', (event) => {
            if (passwordInput && passwordInput.value.trim().length === 0) {
                if (validationSpan) {
                    validationSpan.textContent = 'Пароль обязателен';
                }
                event.preventDefault();
            }
        });
    </script>
</body>
</html>
